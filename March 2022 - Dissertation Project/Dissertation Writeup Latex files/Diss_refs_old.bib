	year = {2013},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1890/ES13-00247.1},
	keywords = {regime shift, calcite precipitation, CO2 emissions, global carbon cycle, metabolism, sedimentation, submerged macrophytes, temperate zone, trophic status},
