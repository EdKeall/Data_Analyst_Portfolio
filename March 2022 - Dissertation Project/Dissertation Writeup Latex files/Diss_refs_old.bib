	journal = {Frontiers in Marine Science},
	author = {Ní Longphuirt, Sorcha and McDermott, Georgina and O’Boyle, Shane and Wilkes, Robert and Stengel, Dagmar Brigitte},
	year = {2019},
	doi = {10.3389/fmars.2019.00312},
	file = {Full Text PDF:C\:\\Users\\edmun\\Zotero\\storage\\W2BIJGIF\\Ní Longphuirt et al. - 2019 - Decoupling Abundance and Biomass of Phytoplankton .pdf:application/pdf},
