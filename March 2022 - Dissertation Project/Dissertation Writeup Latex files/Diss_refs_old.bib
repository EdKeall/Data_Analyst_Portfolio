	journal = {Journal of Plankton Research},
	author = {Richardson, K. and Visser, A.W. and Pedersen, F. Bo},
	month = sep,
	year = {2000},
	pages = {1663--1671},
	annote = {Argument against spring phytoplankton blooms fueling summer production,
rather that smaller subsurface blooms are fueling summer production},
	file = {Full Text PDF:C\:\\Users\\edmun\\Zotero\\storage\\NDTUZEFH\\Richardson et al. - 2000 - Subsurface phytoplankton blooms fuel pelagic produ.pdf:application/pdf;Snapshot:C\:\\Users\\edmun\\Zotero\\storage\\SNV5WIFN\\1478103.html:text/html},
}

@article{ross_blooms_2017,
	title = {Blooms and subsurface phytoplankton layers on the {Scotian} {Shelf}: {Insights} from profiling gliders},
	volume = {172},
	issn = {0924-7963},
	url = {https://www.sciencedirect.com/science/article/pii/S0924796316302111},
